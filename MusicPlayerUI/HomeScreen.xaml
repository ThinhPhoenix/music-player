<Window x:Class="MusicPlayerUI.HomeScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MusicPlayerUI"
        mc:Ignorable="d"
        Title="Music Player" Height="500" Width="800"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#252525" Height="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="Music Player" Foreground="#E0E0E0" FontSize="24" FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Settings" Width="80" Height="30" Margin="10,0" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Login" Width="80" Height="30" Margin="10,0" Background="#1DB954" Foreground="White" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" Background="#252525">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="LIBRARY" Foreground="#808080" FontWeight="Bold" Margin="20,0,0,10"/>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⌂" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Home" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="♫" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="My Music" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="40" Background="#3E3E3E" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="♥" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Favorites" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="↓" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Downloads" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="PLAYLISTS" Foreground="#808080" FontWeight="Bold" Margin="20,20,0,10"/>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="+" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Create Playlist" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <ListBox x:Name="PlaylistsListBox" Background="Transparent" BorderThickness="0">
                        <ListBoxItem Foreground="#E0E0E0" Content="Pop Hits" Padding="30,8,0,8" Tag="1"/>
                        <ListBoxItem Foreground="#E0E0E0" Content="Rock Classics" Padding="30,8,0,8" Tag="2"/>
                        <ListBoxItem Foreground="#E0E0E0" Content="Chill Vibes" Padding="30,8,0,8" Tag="3"/>
                        <ListBoxItem Foreground="#E0E0E0" Content="Workout Mix" Padding="30,8,0,8" Tag="4"/>
                    </ListBox>
                </StackPanel>
            </Grid>

            <!-- Song List Panel -->
            <Grid Grid.Column="1" Background="#1E1E1E">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Playlist Header -->
                <Grid Grid.Row="0" Margin="20,20,20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Width="150" Height="150" Background="#333333" CornerRadius="4">
                        <TextBlock Text="♫" FontSize="80" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>

                    <StackPanel Grid.Column="1" Margin="20,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="PLAYLIST" Foreground="#808080" FontSize="12"/>
                        <TextBlock x:Name="PlaylistNameText" Foreground="White" FontSize="32" FontWeight="Bold" Margin="0,5,0,10" Text="Favorites"/>
                        <TextBlock x:Name="PlaylistInfoText" Text="125 songs • 8 hours 42 minutes" Foreground="#808080" FontSize="14"/>
                    </StackPanel>
                </Grid>

                <!-- Song List -->
                <ListView x:Name="Favorite_List" Grid.Row="1" Margin="20,20,20,10" Background="Transparent" BorderThickness="0" Foreground="White"
                          SelectionChanged="Favorite_List_SelectionChanged" >

                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="#" Width="40"/>
                            <GridViewColumn Header="TITLE" Width="200"/>
                            <GridViewColumn Header="ARTIST" Width="150"/>
                            <GridViewColumn Header="ALBUM" Width="150"/>
                            <GridViewColumn Header="DURATION" Width="80"/>
                        </GridView>
                    </ListView.View>
                    <ListViewItem>
                        <Grid Width="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="1" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Starlight" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Muse" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Black Holes and Revelations" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="4:03" VerticalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Grid Width="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="2" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Blinding Lights" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="The Weeknd" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="After Hours" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="3:22" VerticalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Grid Width="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="3" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Dreams" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Fleetwood Mac" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Rumours" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="4:17" VerticalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem Background="#333333">
                        <Grid Width="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="4" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Don't Start Now" VerticalAlignment="Center" FontWeight="SemiBold"/>
                            <TextBlock Grid.Column="2" Text="Dua Lipa" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Future Nostalgia" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="3:19" VerticalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                    <ListViewItem>
                        <Grid Width="620">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="5" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="1" Text="Uptown Funk" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="2" Text="Mark Ronson ft. Bruno Mars" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="3" Text="Uptown Special" VerticalAlignment="Center"/>
                            <TextBlock Grid.Column="4" Text="4:30" VerticalAlignment="Center"/>
                        </Grid>
                    </ListViewItem>
                </ListView>
            </Grid>
        </Grid>

        <!-- Song Progress -->
        <Grid Grid.Row="2" Background="#252525" Height="10">
            <ProgressBar x:Name="SongProgressBar" Value="35" Maximum="100" Background="#3E3E3E" Foreground="#1DB954" BorderThickness="0" />
        </Grid>

        <!-- Player Controls -->
        <Grid Grid.Row="3" Background="#252525" Height="90">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Now Playing -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0,0,0">
                <Border Width="60" Height="60" Background="#333333" CornerRadius="4">
                    <TextBlock Text="♫" FontSize="32" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
                <StackPanel Margin="15,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="song_name" Text="Don't Start Now" Foreground="White" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="song_artist" Text="Dua Lipa" Foreground="#B3B3B3" FontSize="12" Margin="0,4,0,0"/>
                </StackPanel>
                <Button Content="♥" FontSize="18" Foreground="#1DB954" Background="Transparent" BorderThickness="0" Margin="15,0,0,0" Padding="10,0"/>
            </StackPanel>

            <!-- Controls -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="ShuffleBtn" Content="🔀" FontSize="14" Foreground="#B3B3B3" Background="Transparent" BorderThickness="0" Padding="15,0"/>
                <Button x:Name="PrevButton" Content="◀◀" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="15,0"/>
                <Button x:Name="PlayBtn" Content="▶" FontSize="24" Foreground="White" Background="#1DB954" BorderThickness="0" Width="40" Height="40" Margin="10,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button x:Name="NextButton" Content="▶▶" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="15,0"/>
                <Button x:Name="LoopBtn" Content="↻" FontSize="18" Foreground="#B3B3B3" Background="Transparent" BorderThickness="0" Padding="15,0"/>
            </StackPanel>

            <!-- Volume -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                <Button Content="🔊" FontSize="14" Foreground="#E0E0E0" Background="Transparent" BorderThickness="0" Padding="10,0"/>
                <Slider x:Name="VolumeSlider" Width="100" Value="70" Maximum="100" Margin="10,0" Background="#3E3E3E" Foreground="#1DB954"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>