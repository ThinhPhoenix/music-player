<Window x:Class="Prn212W3FPJ.MusicManagement"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prn212W3FPJ"
        mc:Ignorable="d"
        Title="Music Management" Height="700" Width="1000"
        Background="#1E1E1E">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Background="#252525" Height="70">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="♫" FontSize="32" Foreground="#1DB954" Margin="20,0,0,0"/>
                <TextBlock Text="Artist Dashboard" Foreground="#E0E0E0" FontSize="24" FontWeight="Bold" Margin="15,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,20,0">
                <Button Content="Help" Width="80" Height="32" Margin="10,0" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Border Width="40" Height="40" Background="#333333" CornerRadius="20" Margin="15,0,0,0">
                    <TextBlock Text="JD" Foreground="#E0E0E0" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </StackPanel>
        </Grid>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Grid Grid.Column="0" Background="#252525">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="ARTIST PANEL" Foreground="#808080" FontWeight="Bold" Margin="20,0,0,15"/>

                    <Button Height="45" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📊" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Dashboard" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="45" Background="#3E3E3E" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🎵" FontSize="16" Foreground="#1DB954" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="My Music" Foreground="#1DB954" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="45" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="📝" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Analytics" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="45" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="💰" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Revenue" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="45" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="🔔" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Notifications" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="45" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="⚙️" FontSize="16" Foreground="#E0E0E0" Width="30" TextAlignment="Center"/>
                            <TextBlock Text="Settings" Foreground="#E0E0E0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="QUICK LINKS" Foreground="#808080" FontWeight="Bold" Margin="20,30,0,15"/>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Help Center" Foreground="#E0E0E0" Margin="30,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Height="40" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Community" Foreground="#E0E0E0" Margin="30,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Column="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Page Title and Actions -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Music Management" Foreground="White" FontSize="26" FontWeight="Bold"/>

                    <Button Grid.Column="1" Content="Upload New Music" Height="40" Padding="15,0" Background="#1DB954" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </Grid>

                <!-- Filters and Search -->
                <Grid Grid.Row="1" Margin="0,25,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" Width="150" Height="36" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1" SelectedIndex="0">
                        <ComboBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </ComboBox.Resources>
                        <ComboBoxItem Content="All Music"/>
                        <ComboBoxItem Content="Singles"/>
                        <ComboBoxItem Content="Albums"/>
                        <ComboBoxItem Content="Unreleased"/>
                    </ComboBox>

                    <Grid Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#252525" BorderBrush="#3E3E3E" BorderThickness="1" Width="250" Height="36" CornerRadius="4" Margin="0,0,10,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="🔍" FontSize="14" Margin="10,0,0,0" Foreground="#808080" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Background="Transparent" BorderThickness="0" Foreground="White" VerticalContentAlignment="Center" Margin="5,0,0,0"/>
                            </Grid>
                        </Border>

                        <Button Grid.Column="1" Content="Search" Width="80" Height="36" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="4"/>
                                </Style>
                            </Button.Resources>
                        </Button>
                    </Grid>
                </Grid>

                <!-- Music Tracks Table -->
                <Grid Grid.Row="2" Background="#252525">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Table Headers -->
                    <Grid Grid.Row="0" Background="#333333" Height="50">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        <TextBlock Grid.Column="1" Text="TITLE" Foreground="#B3B3B3" FontWeight="SemiBold" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock Grid.Column="2" Text="ALBUM" Foreground="#B3B3B3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="DATE ADDED" Foreground="#B3B3B3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="PLAYS" Foreground="#B3B3B3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Grid.Column="5" Text="ACTIONS" Foreground="#B3B3B3" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Table Content -->
                    <ListView Grid.Row="1" Background="Transparent" BorderThickness="0">
                        <!-- Track 1 -->
                        <ListViewItem Height="60" Background="Transparent">
                            <Grid Width="740">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="40" Height="40" Background="#333333" CornerRadius="4">
                                        <TextBlock Text="♫" FontSize="16" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Summer Vibes" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Beach Party" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="April 12, 2025" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="24,862" Foreground="#B3B3B3" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit" Width="50" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="..." Width="30" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>

                        <!-- Track 2 -->
                        <ListViewItem Height="60" Background="#2A2A2A">
                            <Grid Width="740">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="40" Height="40" Background="#333333" CornerRadius="4">
                                        <TextBlock Text="♫" FontSize="16" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Midnight Dreams" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Night Owl" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="March 28, 2025" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="18,749" Foreground="#B3B3B3" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit" Width="50" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="..." Width="30" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>

                        <!-- Track 3 -->
                        <ListViewItem Height="60" Background="Transparent">
                            <Grid Width="740">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="40" Height="40" Background="#333333" CornerRadius="4">
                                        <TextBlock Text="♫" FontSize="16" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Electric Sunset" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="City Lights" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="March 15, 2025" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="32,105" Foreground="#B3B3B3" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit" Width="50" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="..." Width="30" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>

                        <!-- Track 4 -->
                        <ListViewItem Height="60" Background="#2A2A2A">
                            <Grid Width="740">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="40" Height="40" Background="#333333" CornerRadius="4">
                                        <TextBlock Text="♫" FontSize="16" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Rainy Day" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Weather Moods" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="February 20, 2025" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="16,238" Foreground="#B3B3B3" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit" Width="50" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="..." Width="30" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>

                        <!-- Track 5 -->
                        <ListViewItem Height="60" Background="Transparent">
                            <Grid Width="740">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Border Width="40" Height="40" Background="#333333" CornerRadius="4">
                                        <TextBlock Text="♫" FontSize="16" Foreground="#1DB954" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>
                                    <TextBlock Text="Morning Coffee" Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>
                                </StackPanel>

                                <TextBlock Grid.Column="2" Text="Daily Rituals" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="3" Text="January 05, 2025" Foreground="#B3B3B3" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="4" Text="42,917" Foreground="#B3B3B3" VerticalAlignment="Center"/>

                                <StackPanel Grid.Column="5" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Edit" Width="50" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0" Margin="0,0,5,0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                    <Button Content="..." Width="30" Height="30" Background="#3E3E3E" Foreground="#E0E0E0" BorderThickness="0">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="4"/>
                                            </Style>
                                        </Button.Resources>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </ListViewItem>
                    </ListView>
                </Grid>

                <!-- Add Upload Music Form -->
                <Border Grid.Row="2" Background="#333333" BorderThickness="1" BorderBrush="#3E3E3E" CornerRadius="8" Padding="25" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Form Header -->
                        <StackPanel Grid.Row="0">
                            <TextBlock Text="Upload New Music" Foreground="White" FontSize="20" FontWeight="Bold"/>
                            <TextBlock Text="Fill in the details below to upload your new track" Foreground="#B3B3B3" Margin="0,5,0,20"/>
                        </StackPanel>

                        <!-- Form Fields -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Album Art Upload -->
                                    <Border Grid.Column="0" Width="120" Height="120" Background="#252525" BorderThickness="2" BorderBrush="#3E3E3E" CornerRadius="4">
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <TextBlock Text="+" FontSize="30" Foreground="#808080" HorizontalAlignment="Center"/>
                                            <TextBlock Text="Cover Art" Foreground="#808080" Margin="0,5,0,0"/>
                                        </StackPanel>
                                    </Border>

                                    <!-- Track Information -->
                                    <StackPanel Grid.Column="1" Margin="25,0,0,0">
                                        <TextBlock Text="Track Title" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                                        <TextBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                                            <TextBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </TextBox.Resources>
                                        </TextBox>

                                        <Grid Margin="0,15,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                                <TextBlock Text="Album" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                                                <ComboBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                                                    <ComboBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="4"/>
                                                        </Style>
                                                    </ComboBox.Resources>
                                                    <ComboBoxItem Content="New Album..."/>
                                                    <ComboBoxItem Content="Beach Party"/>
                                                    <ComboBoxItem Content="Night Owl"/>
                                                    <ComboBoxItem Content="City Lights"/>
                                                    <ComboBoxItem Content="Weather Moods"/>
                                                </ComboBox>
                                            </StackPanel>

                                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                                <TextBlock Text="Genre" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                                                <ComboBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                                                    <ComboBox.Resources>
                                                        <Style TargetType="Border">
                                                            <Setter Property="CornerRadius" Value="4"/>
                                                        </Style>
                                                    </ComboBox.Resources>
                                                    <ComboBoxItem Content="Pop"/>
                                                    <ComboBoxItem Content="Electronic"/>
                                                    <ComboBoxItem Content="R&amp;B"/>
                                                    <ComboBoxItem Content="Rock"/>
                                                    <ComboBoxItem Content="Hip Hop"/>
                                                    <ComboBoxItem Content="Jazz"/>
                                                    <ComboBoxItem Content="Classical"/>
                                                </ComboBox>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Grid>

                                <TextBlock Text="Upload Audio File" Foreground="#B3B3B3" Margin="0,25,0,5"/>
                                <Border Background="#252525" BorderThickness="2" BorderBrush="#3E3E3E" Height="70" CornerRadius="4">
                                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                        <TextBlock Text="Drag and drop audio file here or" Foreground="#808080" HorizontalAlignment="Center"/>
                                        <Button Content="Browse Files" Background="Transparent" Foreground="#1DB954" BorderThickness="0" Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Border>

                                <TextBlock Text="Description" Foreground="#B3B3B3" Margin="0,20,0,5"/>
                                <TextBox Height="80" TextWrapping="Wrap" AcceptsReturn="True" Padding="10" VerticalContentAlignment="Top" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                                    <TextBox.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <Grid Margin="0,20,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                        <TextBlock Text="Release Date" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                                        <DatePicker Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                                            <DatePicker.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </DatePicker.Resources>
                                        </DatePicker>
                                    </StackPanel>

                                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                        <TextBlock Text="Privacy" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                                        <ComboBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1" SelectedIndex="0">
                                            <ComboBox.Resources>
                                                <Style TargetType="Border">
                                                    <Setter Property="CornerRadius" Value="4"/>
                                                </Style>
                                            </ComboBox.Resources>
