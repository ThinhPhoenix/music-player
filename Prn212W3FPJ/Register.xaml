<Window x:Class="Prn212W3FPJ.Register"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prn212W3FPJ"
        mc:Ignorable="d"
        Title="Register" Height="600" Width="450"
        Background="#1E1E1E"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel VerticalAlignment="Center" Margin="40,30">
            <!-- Header -->
            <TextBlock Text="Create an Account" Foreground="#E0E0E0" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center"/>
            <TextBlock Text="♫" FontSize="40" Foreground="#1DB954" HorizontalAlignment="Center" Margin="0,10,0,20"/>

            <!-- Registration Form -->
            <TextBlock Text="REGISTER" Foreground="#808080" FontWeight="Bold" Margin="0,0,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                    <TextBlock Text="First Name" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                    <TextBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                    <TextBlock Text="Last Name" Foreground="#B3B3B3" Margin="0,0,0,5"/>
                    <TextBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="4"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </StackPanel>
            </Grid>

            <TextBlock Text="Email" Foreground="#B3B3B3" Margin="0,15,0,5"/>
            <TextBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                <TextBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </TextBox.Resources>
            </TextBox>

            <TextBlock Text="Password" Foreground="#B3B3B3" Margin="0,15,0,5"/>
            <PasswordBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                <PasswordBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>

            <TextBlock Text="Confirm Password" Foreground="#B3B3B3" Margin="0,15,0,5"/>
            <PasswordBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                <PasswordBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </PasswordBox.Resources>
            </PasswordBox>

            <TextBlock Text="Account Type" Foreground="#B3B3B3" Margin="0,15,0,5"/>
            <ComboBox Height="40" Padding="10,0" VerticalContentAlignment="Center" Background="#252525" Foreground="White" BorderBrush="#3E3E3E" BorderThickness="1">
                <ComboBox.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </ComboBox.Resources>
                <ComboBoxItem Content="Listener" IsSelected="True"/>
                <ComboBoxItem Content="Artist"/>
            </ComboBox>

            <CheckBox Content="I agree to the Terms and Conditions" Foreground="#B3B3B3" Margin="0,20,0,0"/>
            <CheckBox Content="Send me updates and news" Foreground="#B3B3B3" Margin="0,10,0,0"/>

            <Button Content="CREATE ACCOUNT" Height="45" Background="#1DB954" Foreground="White" FontWeight="Bold" BorderThickness="0" Margin="0,25,0,10">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>

            <!-- Links -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <TextBlock Text="Already have an account? " Foreground="#808080"/>
                <TextBlock>
                    <Hyperlink TextDecorations="None" Foreground="#1DB954">Login</Hyperlink>
                </TextBlock>
            </StackPanel>

            <!-- Registration Options -->
            <TextBlock Text="OR REGISTER WITH" Foreground="#808080" FontSize="11" HorizontalAlignment="Center" Margin="0,30,0,20"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="Google" Height="40" Margin="0,0,5,0" Background="#252525" Foreground="#E0E0E0" BorderThickness="1" BorderBrush="#3E3E3E">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Grid.Column="1" Content="Facebook" Height="40" Margin="5,0,0,0" Background="#252525" Foreground="#E0E0E0" BorderThickness="1" BorderBrush="#3E3E3E">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</Window>